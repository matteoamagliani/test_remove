<UserControl x:Class="AngelastroGeremy.Views.PedidosView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Grid Margin="20">
        <TextBlock Text="Gestión de Pedidos"
FontSize="28"
FontWeight="Bold"
Margin="0,0,0,20"/>


        <Border BorderBrush="{StaticResource SoftBorderBrush}"
BorderThickness="1"
CornerRadius="8"
Padding="20"
Background="White">
            <StackPanel>
                <TextBlock Text="Aquí irá la lista de pedidos"
FontSize="16"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>