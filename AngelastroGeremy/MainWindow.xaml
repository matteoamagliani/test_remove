<Window x:Class="AngelastroGeremy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AngelastroGeremy.Views"
        xmlns:vm="clr-namespace:AngelastroGeremy.ViewModels"
        Title="POS System"
        Width="1200" Height="750"
        Background="#F3F4F6">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Background="{StaticResource HeaderBackground}" Grid.Column="0">
            <StackPanel Margin="10">
                <TextBlock Text="Menú"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="10"/>

                <Button Content="Productos"
                        Command="{Binding ShowProductsCommand}"
                        Style="{StaticResource GrayButton}"
                        Margin="0,10"/>

                <Button Content="Pedidos"
                        Command="{Binding ShowOrdersCommand}"
                        Style="{StaticResource GrayButton}"
                        Margin="0,10"/>
    
                <Button Content="Clientes"
                        Command="{Binding ShowCustomersCommand}"
                        Style="{StaticResource GrayButton}"
                        Margin="0,10"/>

            </StackPanel>
        </Border>

        <!-- AREA DI VISUALIZZAZIONE -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentView}"/>
    </Grid>
</Window>

